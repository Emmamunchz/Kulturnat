<style>
 
    .by{
        position: relative;
        font-size: 1rem;
        top: -25px;
        border: none;
    }
  .transition, ul li i:before, ul li i:after, p {
    transition: all 0.25s ease-in-out;
  }

  .flipIn, ul li, h1 {
    animation: flipdown 0.5s ease both;
  }

  h1, h2 {
    color: black;
  }

  .header {
    display: flex;
    align-items: center;
    gap: 40px; 
  }

  h2 {
    font-size: 26px;
    line-height: 34px;
    font-weight: 300;
    letter-spacing: 1px;
    display: block;
    background-color: #EAE1D4;
    margin: 0;
    cursor: pointer;
    padding: 20px; 
    
  }

  p {
    color: black;
    background-color: #EAE1D4;
    font-size: 1rem;
    line-height: 26px;
    letter-spacing: 1px;
    position: relative;
    overflow: hidden;
    max-height: 800px;
    opacity: 1;
    transform: translate(0, 0);
    z-index: 2;
    border: 0.5px solid #000;

  }

  ul {
    list-style: none;
    perspective: 900;
    padding: 0;
    margin: 0;
  }

  ul li {
    position: relative;
    padding: 0;
    margin: 0;
  
  }

  ul li:nth-of-type(1) {
    animation-delay: 0.5s;
  }

  ul li:nth-of-type(2) {
    animation-delay: 0.75s;
  }

  ul li:nth-of-type(3) {
    animation-delay: 1s;
  }

  ul li:last-of-type {
    padding-bottom: 0;
  }

  ul li i {
    position: absolute;
    transform: translate(-6px, 0);
    margin-top: 16px;
    right: 0;
  }

  ul li i:before, ul li i:after {
    content: "";
    position: absolute;
    background-color: #D5FF8B;
    width: 3px;
    height: 9px;
    right: 40px;
    top: 50px;
    
  }

  ul li i:before {
    transform: translate(-2px, 0) rotate(45deg);
  }

  ul li i:after {
    transform: translate(2px, 0) rotate(-45deg);
  }

  ul li input[type=checkbox] {
    position: absolute;
    cursor: pointer;
    width: 100%;
    height: 100%;
    z-index: 1;
    opacity: 0;
  }

  ul li input[type=checkbox]:checked ~ p {
    margin-top: 0;
    max-height: 0;
    opacity: 0;
    transform: translate(0, 50%);
  }

  ul li input[type=checkbox]:checked ~ i:before {
    transform: translate(2px, 0) rotate(45deg);
  }

  ul li input[type=checkbox]:checked ~ i:after {
    transform: translate(-2px, 0) rotate(-45deg);
  }

  .content-box {
    background-color: #EAE1D4;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .content-box img {
    width: 130px; 
    height: 100px; 
    object-fit: cover; 
  }

  @keyframes flipdown {
    0% {
      opacity: 0;
      transform-origin: top center;
      transform: rotateX(-90deg);
    }
    5% {
      opacity: 1;
    }
    80% {
      transform: rotateX(8deg);
    }
    83% {
      transform: rotateX(6deg);
    }
    92% {
      transform: rotateX(-3deg);
    }
    100% {
      transform-origin: top center;
      transform: rotateX(0deg);
    }
  }
</style>
