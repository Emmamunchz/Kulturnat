---
// Importér props og komponenter
const { img, p, h2, by } = Astro.props;
import ProgramButton from "../components/ProgramButton.astro";
import "/src/styles/generel.css";
---

<ul>
  <li>
    <input type="checkbox" checked />
    <i></i>
    <div class="content-box">
      <div class="header">
        <img src={img} alt="Koncert" class="koncert" />
        <h2>{h2}</h2>
        <p class="by">{by}</p>
      </div>
    </div>
    <div class="wrapper">
      <div class="wrapper_grid">
        <div class="tekst_gemknap">
          <p>{p}</p>
        </div>

        <img src={img} alt="billedetest" />
      </div>
    </div>
  </li>
</ul>

<style>
  .wrapper {
    /* border: 0.5px solid #000; */
  }
  .dropdown_overskrift_dato_knap {
    display: flex;
    flex-direction: row;
    background-color: var(--secundary-oat);
  }
  .wrapper_grid {
    display: grid;
    background-color: var(--secundary-oat);
    grid-template-columns: 2fr 1fr;
    padding: 1rem;
  }
  .by {
    position: relative;
    font-size: 18px;
    border: none;
  }
  .transition,
  ul li i:before,
  ul li i:after,
  p {
    transition: all 0.25s ease-in-out;
  }

  .flipIn,
  ul li,
  h1 {
    animation: flipdown 0.5s ease both;
  }

  h1,
  h2 {
    color: var(--primary_darkgrey);
  }

  .header {
    display: flex;
    align-items: center;
    gap: 40px;
  }

  h2 {
    line-height: 34px;
    letter-spacing: 1px;
    display: block;
    background-color: #eae1d4;
    margin: 0;
    cursor: pointer;
    padding: 10px;
    font-family: "Anton", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 28px;
  }

  p {
    color: black;
    background-color: #eae1d4;
    font-size: 1rem;
    line-height: 26px;
    letter-spacing: 1px;
    position: relative;
    overflow: hidden;
    max-height: 800px;
    opacity: 1;
    transform: translate(0, 0);
    z-index: 2;
    margin-right: 1rem;
  }

  ul {
    list-style: none;
    perspective: 900;
    padding: 0;
    margin: 0;
  }

  ul li {
    position: relative;
    padding: 0;
    margin: 0;
    border: 0.5px solid black;
  }

  ul li:nth-of-type(1) {
    animation-delay: 0.5s;
  }

  ul li:nth-of-type(2) {
    animation-delay: 0.75s;
  }

  ul li:nth-of-type(3) {
    animation-delay: 1s;
  }

  ul li:last-of-type {
    padding-bottom: 0;
  }

  ul li i {
    position: absolute;
    transform: translate(-6px, 0);
    margin-top: 16px;
    right: 0;
  }

  ul li i:before,
  ul li i:after {
    content: "";
    position: absolute;
    background-color: var(--primary_darkgrey);
    width: 3px;
    height: 9px;
    right: 40px;
    top: 50px;
  }

  ul li i:before {
    transform: translate(-2px, 0) rotate(45deg);
  }

  ul li i:after {
    transform: translate(2px, 0) rotate(-45deg);
  }

  ul li input[type="checkbox"] {
    position: absolute;
    cursor: pointer;
    width: 100%;
    height: 100%;
    z-index: 1;
    opacity: 0;
  }

  ul li input[type="checkbox"]:checked ~ .wrapper,
  ul li input[type="checkbox"]:checked ~ p {
    margin-top: 0;
    max-height: 0;
    opacity: 0;
    transform: translate(0, 50%);
  }
  .wrapper {
    transition: all 0.5s ease-in-out;
    max-height: 800px; /* Eller en passende højde */
    overflow: hidden;
  }

  ul li input[type="checkbox"]:checked ~ i:before {
    transform: translate(2px, 0) rotate(45deg);
  }

  ul li input[type="checkbox"]:checked ~ i:after {
    transform: translate(-2px, 0) rotate(-45deg);
  }

  .content-box {
    background-color: #eae1d4;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .content-box img {
    width: 130px;
    height: 100px;
    object-fit: cover;
  }

  @keyframes flipdown {
    0% {
      opacity: 0;
      transform-origin: top center;
      transform: rotateX(-90deg);
    }
    5% {
      opacity: 1;
    }
    80% {
      transform: rotateX(8deg);
    }
    83% {
      transform: rotateX(6deg);
    }
    92% {
      transform: rotateX(-3deg);
    }
    100% {
      transform-origin: top center;
      transform: rotateX(0deg);
    }
  }
</style>
