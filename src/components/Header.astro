---
import SoMe from "./SoMe.astro";
import "./src/pages/generel.css";
---

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const burger = document.querySelector(".burger");
    const nav = document.querySelector("nav");
    const menu = document.querySelector(".menu");
    const menuHover = document.querySelector(".burger_hover img");

    if (burger && nav) {
      burger.addEventListener("click", () => {
        burger.classList.toggle("active");
        nav.classList.toggle("active");
        menu.classList.toggle("open");
        menuHover.classList.toggle("active");

        if (menu.classList.contains("open")) {
          menuHover.src = "../assets/active_burger.svg"; // Billedet når menuen er åben
        } else {
          menuHover.src = "../assets/closed_burger.png"; // Billedet når menuen er lukket
        }
      });
    }

    if (menu) {
      menu.addEventListener("click", () => {
        burger.classList.remove("active");
        nav.classList.remove("active");
        menu.classList.remove("open");
        menuHover.classList.remove("active");
        menuHover.src = "../assets/closed_burger.png"; // Billedet når menuen er lukket
      });
    }
  });
</script>

<header>
  <div class="header-container">
    <a href="index.astro">
      <img src="../assets/Logo.svg" class="img_logo" />
    </a>
  </div>
  <nav>
    <ul class="menu">
