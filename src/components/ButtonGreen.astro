---
const { tekst } = Astro.props;
---

<div class="wrapper"><button class="buttonGreen">{tekst}</button></div>

<style>
  .buttonGreen {
    font-size: 30px;
    color: rgba(213, 255, 139, 1);
    border: solid 1px rgba(213, 255, 139, 1);
    border-radius: 3px;
    background-color: rgba(49, 49, 49, 1);
  }

  .buttonGreen:hover {
    scale: 1.2;
  }
  .buttonGreen:active {
    opacity: 0.8;
  }
</style>
