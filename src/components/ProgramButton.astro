---
const { icon, farve } = Astro.props;
---

<div style=`background-color: ${farve};`><p>{icon}</p></div>

<style>
  div {
    aspect-ratio: 1/1;
    border: 1px solid var(--primary_darkgrey);
    border-radius: 50px;
    padding: 1px;
    height: 30px;
    align-self: center;
  }
  p {
    font-size: 25px;
    color: var(--primary_darkgrey);
    margin: 0;
    padding: 0;
    text-align: center;
    line-height: 1.1;
  }
</style>
