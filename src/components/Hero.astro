---

import "./src/pages/generel.css";

// tror noget alla for at lave countdown
export interface Props {
  image: string;
  days: number;
  hours: number;
  minutes: number;
}

const { image, days, hours, minutes } = Astro.props;


---

<div class="hero">
  <img src=src/assets/hero.webp alt="Helsingør Kulturnat" class="background-image" />
  <div class="overlay">
    <div class="hero-content">
        <img src=src/assets/titel.svg alt="Helsingør Kulturnat" class="titel" />
        <div class="countdown-tal">
            <div><span>{days}</span></div>
            <div><span>{hours}</span></div>
            <div><span>{minutes}</span></div>
          </div>
      <div class="countdown">
        <div> DAGE</div>
        <div>TIMER</div>
        <div> MIN</div>
      </div>
      <button class="cta">GEM DATOEN</button>
    </div>
    <img class="frame" src="src/assets/ramme-desk.svg" alt="frame" style="width: 90%; max-width: 5
    1200px; height: auto;" />
</div>
</div>

